<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<data-sources />
	<form-beans />
	<global-exceptions />
	<global-forwards />
	<action-mappings>
		<action path="/t_security" type="struts.actions.tiles.T_SecurityAction">
			<set-property property="cancellable" value="true" />
			<forward name="roleManagement" path="page.security" />
			<forward name="roleEdit" path="page.security" />
		</action>
		<action path="/t_game" type="struts.actions.tiles.T_GameAction">
			<set-property property="cancellable" value="true" />
			<forward name="goToLobby" path="page.game" />
			<forward name="joinAGame" path="page.game" />
		</action>
		<action path="/t_user" type="struts.actions.tiles.T_UserAction">
			<set-property property="cancellable" value="true" />
			<forward name="userManagement" path="page.user" />
			<forward name="userEdit" path="page.user" />
		</action>
		<action path="/t_payment" type="struts.actions.tiles.T_PaymentAction">
			<set-property property="cancellable" value="true" />
			<forward name="paymentManagement" path="page.payment" />
			<forward name="paymentEdit" path="page.payment"/>
		</action>
	</action-mappings>
	<message-resources parameter="mic.crm.struts.tiles.ApplicationResources" />
	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
		<set-property property="moduleAware" value="true" />
		<set-property property="definitions-parser-validate"
			value="true" />
	</plug-in>
</struts-config>

