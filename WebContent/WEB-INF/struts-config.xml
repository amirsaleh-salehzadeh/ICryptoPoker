<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<data-sources />
	<form-beans>
		<form-bean name="paymentGrid" type="common.accounting.payment.PaymentLST" />
		<form-bean name="securityForm" type="common.security.RoleENT" />
		<form-bean name="securityForm" type="common.security.RoleLST" />
		<form-bean name="saleGrid" type="common.accounting.sale.SaleLST" />
		
		<form-bean name="roleGrid" type="common.security.RoleLST" />

	</form-beans>
	<global-exceptions />
	<global-forwards />
	<action-mappings>
		<action path="/security" type="struts.actions.SecurityAction"
			name="roleGrid">
			<set-property property="cancellable" value="true" />
			<forward name="roleManagement" path="/pages/security/roleManagement.jsp" />
			<forward name="roleEdit" path="/pages/security/roleEdit.jsp" />
			<forward name="gridJson" path="/pages/json.jsp" />
		</action>

		<action path="/user" type="struts.actions.UserAction">
			<set-property property="cancellable" value="true" />
			<forward name="userManagement" path="/pages/user/userManagement.jsp" />
			<forward name="userEdit" path="/pages/user/userEdit.jsp" />
			<forward name="passwordChange" path="/pages/user/passwordChange.jsp" />
			<forward name="userRole" path="/pages/user/userRole.jsp" />
			<forward name="login" path="/login.html" />
			<forward name="register" path="/pages/user/register.html" />
			<forward name="gridJson" path="/pages/json.jsp" />
		</action>
		<action path="/game" type="struts.actions.GameAction">
			<set-property property="cancellable" value="true" />
			<forward name="goToLobby" path="/pages/game/lobby.jsp" />
			<forward name="joinAGame" path="/pages/game/table.jsp" />
		</action>
		<action path="/payment" type="struts.actions.PaymentAction"
			name="paymentGrid">
			<set-property property="cancellable" value="true" />
			<forward name="paymentEdit" path="/pages/accounting/payment/paymentEdit.jsp" />
			<forward name="paymentManagement"
				path="/pages/accounting/payment/paymentManagement.jsp" />
			<forward name="gridJson" path="/pages/json.jsp" />
		</action>
		<action path="/sale" type="struts.actions.SaleAction" name="saleGrid">
			<set-property property="cancellable" value="true" />
			<forward name="saleEdit" path="/pages/accounting/sale/saleEdit.jsp" />
			<forward name="saleManagement" path="/pages/accounting/sale/saleManagement.jsp" />
			<forward name="gridJson" path="/pages/json.jsp" />
		</action>
		<action parameter="reqCode" path="/logOut" type="struts.actions.LogOutAction">
			<set-property property="cancellable" value="true" />
		</action>
	</action-mappings>

	<message-resources parameter="mic.crm.struts.ApplicationResources" />

</struts-config>

